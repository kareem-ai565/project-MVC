@using project.ModelViews
@model NewInstructorVM
@{
    ViewData["Title"] = "Add New Instructor";
}

<h2>@ViewData["Title"]</h2>

<form action="/Instructor/SaveNew" method="post" enctype="multipart/form-data">


    <div class="form-group mb-3">
        <label>Instructor Name</label>
        <input type="text" name="InstructorName" id="InstructorName" class="form form-check" rows="3">
    </div>

    <div class="form-group mb-3">
        <label> Salary</label>
        <input type="number" name="Salary" id="Salary" class="form form-check" rows="3">
    </div>

    <div class="form-group mb-3">
        <label>Address</label>
        <input type="text" name="Address" id="Address" class="form form-check" rows="3">
    </div>

    <div class="form-group mb-3">
        <label >Enter Image path</label>
        <input type="text" name="Image" id="Image" class="form form-check" rows="3">
    </div>

    <div class="form-group mb-3">
        <label>Courses</label>
        <select name="Courses" id="Courses" class="form form-control">
            <option>-- Select Course --</option>
            @foreach (Course course in Model.Courses)
            {
                <option value="@course.Id">@course.CourseName</option>
            }
        </select> 
    </div>

    <div class="form-group mb-3">
        <label>Departments</label>
        <select name="Departments" id="Departments" class="form form-control">
            <option>-- Select Department --</option>
            @foreach (Department dept in Model.Departments)
            {
                <option value="@dept.Id">@dept.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-success" />
        <a href="/Instructor/ShowAllInstructors" class="btn btn-secondary">Back to List</a>
    </div>
</form>

